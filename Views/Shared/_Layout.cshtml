<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Portifólio ASP.NET MVC </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body >

    <div>

        <div class="navbar navbar-inverse navbar bg-danger  navbar-fixed-top  " style="background-color: #f2dede; border-color: #f2dede;">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>


                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">

                                <li><img src="~/Img/m.png.png" width="70" height="80" /></img></li>


                                <li>@Html.ActionLink("Mayara", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>


                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Projetos", "Project", "Home")</li>
                                <li>@Html.ActionLink("Skills", "Skills", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                        </div>
                    </div>
        </div>
    </div>



    <div class="container body-content">



        @RenderBody()
        <hr />
        <br />
        <br />
        <br />
        <br />
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)





</body>


</html>
